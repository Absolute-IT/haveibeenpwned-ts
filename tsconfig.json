{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		/* Basic Options */
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"types": ["node"],
		"baseUrl": "./",
		"paths": {
			/*"@lib/*": ["./lib/*"]*/
		},
		"outDir": "./dist",
		"rootDir": "./src",

		/* Workspace Settings */
		"incremental": true,
		"composite": true,

		/* Strict Type-Checking Options */
		"strict": true,

		/* Module Resolution Options */
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"sourceMap": true,

		"declaration": true,

		/* Advanced Options */
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}